# API
API_PORT=8000

# PostgreSQL
# Option A: full connection string
# DB_URL=host=localhost port=5432 user=your_user password=your_password dbname=your_db sslmode=disable
#
# Option B: individual values (used when DB_URL is empty)
DB_HOST=localhost
DB_PORT=5432
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_NAME=postgres
DB_SSLMODE=disable

# Gmail SMTP
GMAIL_EMAIL=your_email@gmail.com
GMAIL_APP_PASSWORD=your_gmail_app_password

# Supabase
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your_supabase_service_role_key
